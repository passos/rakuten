<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/colorAccent"
  android:padding="@dimen/gap_regular"
  tools:context=".view.activity.MainActivity">

  <ImageView
    android:id="@+id/return_icon"
    android:layout_width="@dimen/title_bar_size"
    android:layout_height="@dimen/title_bar_size"
    android:layout_alignParentStart="true"
    android:layout_marginEnd="@dimen/gap_regular"
    android:src="@android:drawable/ic_menu_close_clear_cancel" />

  <TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/return_icon"
    android:layout_alignBottom="@id/return_icon"
    android:layout_toStartOf="@+id/menu_icon"
    android:layout_toEndOf="@id/return_icon"
    android:gravity="center"
    android:text="Title" />

  <ImageView
    android:id="@+id/menu_icon"
    android:layout_width="@dimen/title_bar_size"
    android:layout_height="@dimen/title_bar_size"
    android:layout_alignParentEnd="true" />
</RelativeLayout>
